{
  "workspaces": [
    "./create-react-solution",
    "./react-solution",
    "./server",
    "./src"
  ],
  "private": true,
  "type": "module",
  "author": "Vladimir Shestakov boolive@yandex.ru",
  "license": "ISC",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "npm run build && vite preview",
    "start:server": "cross-env NODE_ENV=development npm run node:server",
    "build:server": "npm run build && vite build --ssr index.tsx",
    "preview:server": "npm run build:server && npm run node:server",
    "node:server": "cross-env NODE_OPTIONS=\"--import=./server/register.js\" node ./server/index.ts",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "check:lint": "eslint",
    "check:lint:fix": "eslint --fix",
    "check:types": "tsc --noEmit",
    "check:prettier": "prettier . --check",
    "check:prettier:fix": "prettier . --write",
    "build:doc": "typedoc",
    "build:react-solution": "cross-env VITE_CJS_TRACE=true vite build -c vite.react-solution.config.ts",
    "publish:react-solution": "cd ./dist/react-solution && npm publish",
    "publish:create-react-solution": "cd ./create-react-solution && npm publish",
    "deploy:all": "npm run build:react-solution && npm run publish:react-solution && npm run publish:create-react-solution"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/dotenv-parse-variables": "^2.0.3",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "dotenv-parse-variables": "^2.0.0",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "less": "^4.2.1",
    "prettier": "^3.3.3",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.7",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-no-bundle": "^4.0.0",
    "vite-plugin-static-copy": "^1.0.6"
  }
}
